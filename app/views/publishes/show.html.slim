.row
    .columns.small-12.large-6
        .block.publish_block
            h5= "Публикация товара #{@publish.name}"
            = simple_form_for @publish, url: product_publish_path(@publish.product, @publish), method: :patch do |f|
                = f.input :name, placeholder: 'Название товара', label: 'Название'
                = f.input :caption, placeholder: 'Описание товара', label: 'Описание'
                = f.input :price, placeholder: 'Цена товара', label: 'Цена'
                = label_tag 'publish_album_id', 'Выберите альбом для загрузки'
                = f.select :album_id, options_for_select(@albums, @publish.album_id.nil? ? nil :@publish.album_of_publish.album_id)
                .check_box.photos_check
                    = label_tag 'photos_check', 'Использовать все фото?'
                    = check_box_tag :photos_check
                .check_box.to_market
                    = label_tag 'to_market', "#{@publish.market_item_id.present? ? 'Обновить товар в группе' : 'Добавить товар в группу'}"
                    = check_box_tag :to_market
                .check_box.to_site class="#{'visible' if current_user.site.settings['request_for_loading'].present?}"
                    = label_tag 'to_site', 'Отправить данные на сайт'
                    = check_box_tag :to_site
                = f.button :submit, value: "#{@publish.is_published? ? 'Обновить публикацию' : 'Опубликовать'}"
                = link_to 'Удалить публикацию', product_publish_path(@publish.product, @publish), method: :delete, data: { confirm: 'Товар будет удален из фотоальбома и товаров группы, Вы уверены?' }, class: 'button delete' if @publish.is_published? && current_user.vk_group.archive.is_set?
    .columns.small-12.large-6
        .block.publish_photo
            = image_tag @publish.product_image